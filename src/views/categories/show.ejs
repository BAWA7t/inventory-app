<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= category.name %></title>
</head>
<body>

  <h1><%= category.name %></h1>

  <% if (category.description) { %>
    <p><%= category.description %></p>
  <% } %>

  <a href="/items/new?category=<%= category.id %>">➕ Add Item</a>

  <h2>Items</h2>

  <% if (items.length === 0) { %>
    <p>No items in this category.</p>
  <% } else { %>
    <table border="1" cellpadding="8">
      <tr>
        <th>Name</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>

      <% items.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.quantity %></td>
          <td>
            <% if (item.price) { %>
              GH₵ <%= item.price %>
            <% } else { %>
              —
            <% } %>
          </td>
          <td>
            <a href="/items/<%= item.id %>/edit">✏️ Edit</a>
          </td>
        </tr>
      <% }) %>
    </table>
  <% } %>

  <br>
  <a href="/categories">⬅ Back</a>

</body>
</html>
